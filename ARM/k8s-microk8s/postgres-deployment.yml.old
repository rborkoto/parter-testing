apiVersion: apps/v1
kind: Deployment  # Create a deployment
metadata:
  name: postgres
  labels:
    role: db
    app: postgres
spec:
  selector:
    matchLabels:
      role: db
      app: postgres
  replicas: 1
  template:
    metadata:
      labels:
        role: db
        app: postgres
    spec:
      containers:
        - name: postgres
          image: postgres:15        # ‚Üê updated from postgres:12
          ports:
            - containerPort: 5432
          env:
            - name: PGDATA
              value: /var/lib/postgresql/data/pgdata
          envFrom:
            - configMapRef:
                name: postgres-config
            - secretRef:
                name: postgres-secret
          volumeMounts:
            - mountPath: /var/lib/postgresql/data
              name: postgresdata
      volumes:
        - name: postgresdata
          persistentVolumeClaim:
            claimName: postgres-volume-claim
